 
@{
    Layout = "~/Views/Shared/Header.cshtml";
    //ViewBag.Title = "Index";
    var gettsirtdetails = ViewBag.tshirtdetailspasstheview;
    int listcount = ViewBag.listcount;
    int k = 0;
    string breakcommand = "Notbreak";



}
<!doctype html>
<html class="no-js" lang="zxx">

<body>

    <!-- bradcam_area_start  -->
    <div class="bradcam_area breadcam_bg_2 bradcam_overlay">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text">
                        <h3>Tshirt</h3>
                        <p><a href="index.html">Tshirt/</a> Progamming</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- bradcam_area_end  -->
    <!-- expert_doctors_area_start -->
    @{
//numberoftotalcircle = 2;
<div class="expert_doctors_area doctor_page">
    <div class="container">

      
        @for (int j = 0; j < 5; j++)
        {
            
                <div class="row">
                    @for (int i = 0; i < 4; i++)
                    {
                        
                        
                    <div class="col-md-6 col-lg-3">
                        <div class="single_expert mb-40">
                            <div class="expert_thumb">
                                <img src="~/img/experts/@gettsirtdetails[@k].fileName" alt="">
                            </div>
                            <div class="experts_name text-center">
                                <h3>@gettsirtdetails[@k].Name</h3>
                                <span>@gettsirtdetails[@k].Name</span>
