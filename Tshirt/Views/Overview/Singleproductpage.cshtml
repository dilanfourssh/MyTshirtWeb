@{
    Layout = "~/Views/Shared/Header.cshtml";
    var singleimages = ViewBag.singleimage;
}
<body>
   
    <!--================Blog Area =================-->
    <section class="blog_area single-post-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 posts-list">
                    <div class="single-post">
                        <div class="feature-img">
                            <img class="img-fluid" src="~/img/experts/@singleimages.fileName" alt="">
                        </div>
                        <div class="blog_details">
                            <h2>
                                Sri Lanka No 01 Tshirt Designing and Printing Site
                            </h2>
                            <ul class="blog-info-link mt-3 mb-4">
                                <li><a href="#"><i class="fa fa-user"></i> Narahenpita, Sri Lanka</a></li>
                                <li><a href="#"><i class="fa fa-comments"></i>call us: 071 21 25 166</a></li>
                            </ul>
                            <p class="excert">
                                Our Website Are Garanteed This T shirt And we Delevery Any Location That Tshirt
                                If you Delevery Around Colombo not Add Delevery Fees You Delevery Expanding
                                Colombo Will Added Dilevery Charges. After Your Order We Delevery including 7days. Thank You Order For Tshirt And You Are Welcome
                            </p>

                        </div>
                    </div>

                    
                    <div class="comment-form">
                        <h4>You Can Order Now Tshirt </h4>
                        @using (Html.BeginForm())
                        {

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="tshirtid" id="name" type="hidden" placeholder="Name" value="@singleimages.id">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <textarea class="form-control w-100" name="companymassege" id="comment" cols="30" rows="9"
                                              placeholder="Enter Small Description How Is Want Your Tsirt"></textarea>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="name" id="name" type="text" placeholder="Name">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="email" id="email" type="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="width" id="name" type="number" placeholder="Width T shirt">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <input class="form-control" name="hight" id="name" type="number" placeholder="Hight Your T shirt">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <textarea class="form-control w-100" name="address" id="comment" cols="30" rows="9"
                                              placeholder="Delevery Address"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <input class="form-control" name="phonenumber" id="website" type="text" placeholder="Phone Number">
                                </div>
                            </div>
                        </div>
                                <div class="form-group">
                                    <button type="submit" class="button button-contactForm btn_1 boxed-btn">Send Your Order</button>
                                </div>

                        }
                        </div>
                    </div>
                    
                <div class="col-lg-4">
                    <div class="blog_right_sidebar">
                        <aside class="single_sidebar_widget search_widget">
                            <form action="#">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder='Search Keyword'
                                               onfocus="this.placeholder = ''" onblur="this.placeholder = 'Search Keyword'">
                                        <div class="input-group-append">
                                            <button class="btn" type="button"><i class="ti-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                        type="submit">
                                    Search
                                </button>
                            </form>
                        </aside>
                        <aside class="single_sidebar_widget post_category_widget">
                            <h4 class="widget_title">Category</h4>
                            <ul class="list cat-list">
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>Progamming</p>
                                        <p>(1)</p>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>Couple</p>
                                        <p>(10)</p>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>Games</p>
                                        <p>(03)</p>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>Family</p>
                                        <p>(11)</p>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>Other</p>
                                        <p>(21)</p>
                                    </a>
                                </li>
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>Adventure</p>
                                        <p>(21)</p>
                                    </a>
                                </li>
                            </ul>
                        </aside>
                       
                        <aside class="single_sidebar_widget newsletter_widget">
                            <h4 class="widget_title">About Us Comment</h4>
                            <form action="#">
                                <div class="form-group">
                                    <input type="text" class="form-control" onfocus="this.placeholder = ''"
                                           onblur="this.placeholder = 'Enter Antry'" placeholder='Enter Antry' required>
                                </div>
                                <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                        type="submit">
                                    Send Entry
                                </button>
                            </form>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </section>

